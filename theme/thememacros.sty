% Simple new line with vertical space
\def\nline{\vspace{0.5cm}}
% Create a small title, with the same font used for the title frame
\def\SmallTitle#1{{\usebeamerfont{apexnew}\large\bfseries\color{Important} #1}}
% Display in bold with the same font used for the title frame
\def\BoldText#1{\usebeamerfont{apexnew}\textbf{#1}}
% Custom emphasize
\def\EmphText#1{\textbf{\color{Important}#1}}
% Display a simple line of code
\def\InlineCode#1{\textcolor{white}{\colorbox{InlineCodeBackground}{\footnotesize\usebeamerfont{code}#1}}}
% Display the text as a function call
\def\call#1{{\usefont{T1}{cmr}{m}{sc}#1}}



